# SKZ Autonomous Agents Framework - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Environment
FLASK_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here-generate-a-strong-one

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=ojs
DATABASE_USER=root
DATABASE_PASSWORD=your-database-password
DATABASE_SSL_MODE=disabled

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# OJS API Configuration
OJS_BASE_URL=http://localhost:8000
OJS_API_KEY=your-ojs-api-key-here
OJS_API_SECRET=your-ojs-api-secret-here
OJS_WEBHOOK_SECRET=your-webhook-secret-here

# Agent Services Configuration
API_GATEWAY_HOST=localhost
API_GATEWAY_PORT=5000

RESEARCH_AGENT_HOST=localhost
RESEARCH_AGENT_PORT=5001
RESEARCH_AGENT_WORKERS=4

SUBMISSION_AGENT_HOST=localhost
SUBMISSION_AGENT_PORT=5002
SUBMISSION_AGENT_WORKERS=4

EDITORIAL_AGENT_HOST=localhost
EDITORIAL_AGENT_PORT=5003
EDITORIAL_AGENT_WORKERS=2

REVIEW_AGENT_HOST=localhost
REVIEW_AGENT_PORT=5004
REVIEW_AGENT_WORKERS=3

QUALITY_AGENT_HOST=localhost
QUALITY_AGENT_PORT=5005
QUALITY_AGENT_WORKERS=3

PUBLISHING_AGENT_HOST=localhost
PUBLISHING_AGENT_PORT=5006
PUBLISHING_AGENT_WORKERS=2

ANALYTICS_AGENT_HOST=localhost
ANALYTICS_AGENT_PORT=5007
ANALYTICS_AGENT_WORKERS=2

# External API Keys
INCI_API_KEY=your-inci-database-api-key
USPTO_API_KEY=your-patent-api-key
PUBMED_API_KEY=your-pubmed-api-key
CROSSREF_API_KEY=your-crossref-api-key

# Machine Learning Configuration
ML_MODEL_PATH=./models
VECTOR_DB_PATH=./vector_db
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
SIMILARITY_THRESHOLD=0.7

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/agents.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=60
PERFORMANCE_MONITORING=true
METRICS_RETENTION_DAYS=30

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400
BCRYPT_LOG_ROUNDS=12

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# SendGrid Configuration (Primary Email Provider)
SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Your Journal Name

# Amazon SES Configuration (Alternative Email Provider)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_SES_REGION=us-east-1

# File Storage Configuration
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=pdf,doc,docx,txt,tex

# Cache Configuration
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=skz_agents_

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
RATELIMIT_PER_METHOD=100
RATELIMIT_PER_HOUR=1000

# Development/Testing Configuration
TESTING=false
TEST_DATABASE_URL=sqlite:///:memory:
MOCK_EXTERNAL_APIS=false

# Production Configuration (uncomment for production)
# FLASK_ENV=production
# DEBUG=false
# SSL_DISABLE=false
# DATABASE_SSL_MODE=required
# LOG_LEVEL=WARNING
