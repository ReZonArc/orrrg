# AI Model Configuration Template
# Copy to .env and configure paths for your deployment

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# Primary LLaMA model for text generation
AI_MODEL_PATH=/path/to/llama-2-7b-chat.q4_0.gguf
AI_CONTEXT_LENGTH=2048
AI_THREADS=4
AI_TEMPERATURE=0.7
AI_TOP_P=0.95

# Fallback model (smaller, quantized)
AI_FALLBACK_MODEL_PATH=/path/to/llama-2-7b-chat.q2_k.gguf

# BERT model for text classification and embeddings
BERT_MODEL_NAME=sentence-transformers/allenai-specter
BERT_DEVICE=cpu
BERT_MAX_LENGTH=512

# Model cache and storage
MODEL_CACHE_DIR=/opt/ai-models/cache
AI_MODELS_BASE_PATH=/opt/ai-models

# Production enforcement
ENVIRONMENT=development  # Set to 'production' to enforce real AI models
AI_FORCE_PRODUCTION=false  # Set to 'true' to block fallbacks and mocks

# =============================================================================
# MODEL DOWNLOAD URLS (for deployment automation)
# =============================================================================

# LLaMA 2 7B Chat Q4_0 (recommended for production)
LLAMA_7B_Q4_URL=https://huggingface.co/TheBloke/Llama-2-7b-Chat-GGML/resolve/main/llama-2-7b-chat.q4_0.bin

# LLaMA 2 7B Chat Q2_K (fallback, smaller)
LLAMA_7B_Q2_URL=https://huggingface.co/TheBloke/Llama-2-7b-Chat-GGML/resolve/main/llama-2-7b-chat.q2_K.bin

# Code Llama 7B (for code generation tasks)
CODE_LLAMA_7B_URL=https://huggingface.co/TheBloke/CodeLlama-7B-Instruct-GGML/resolve/main/codellama-7b-instruct.q4_0.bin

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Resource limits
AI_MAX_MEMORY_GB=8
AI_MAX_CPU_CORES=4
AI_GPU_ENABLED=false
AI_GPU_MEMORY_FRACTION=0.8

# Performance tuning
AI_BATCH_SIZE=1
AI_CONCURRENT_REQUESTS=2
AI_REQUEST_TIMEOUT=300
AI_WARMUP_ENABLED=true

# Monitoring and health checks
AI_HEALTH_CHECK_ENABLED=true
AI_METRICS_ENABLED=true
AI_LOG_LEVEL=INFO

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API access control
AI_API_KEY_REQUIRED=true
AI_RATE_LIMIT_PER_MINUTE=60
AI_MAX_PROMPT_LENGTH=4096
AI_CONTENT_FILTER_ENABLED=true

# Model validation
AI_MODEL_CHECKSUM_VALIDATION=true
AI_SIGNED_MODELS_ONLY=false

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================

# Database for AI operations
AI_DB_URL=postgresql://user:pass@localhost:5432/ai_models
AI_REDIS_URL=redis://localhost:6379/1

# External AI services (backup/hybrid)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
HUGGINGFACE_API_KEY=your_huggingface_key_here

# Service discovery
AI_SERVICE_NAME=skz-ai-engine
AI_SERVICE_PORT=5001
AI_HEALTH_CHECK_PORT=5002